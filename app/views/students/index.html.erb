<h1>Students</h1>

<h2>Student search: </h2>
<p>Please input students name: </p>
<!-- form_tag defaul is POST so we need to add GET -->
<%= form_tag students_path, method: :get do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag "Search", name: nil %>
  <!-- name:nil => delete commit=Search from URL -->
<% end %>

<%# if @matched_students %>
<h4>Serch Result:</h4>
  <ul>
    <% @students.each do |student| %>
      <li><%= student.name %></li>
      <%= render partial: "student", locals: {student: student} %>
    <% end %>
  </ul>
<%# end %>
